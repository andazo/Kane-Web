{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "rewrites": [ { "source": "**", "destination": "/index.html" } ]
  }
}
